<section class="main__container">
  <h1 class="main__title">Register</h1>

  <form class="register__form" action="/addUser" method="POST">
   
    <input class="text-input" type="text" name="username" placeholder="Username">
    
    <label for="email">Email:
    <input id = "email" class="text-input" type="text" placeholder="Email">
    </label>
     <p id="emailErr" class="error"></p>

    <label for="password"> Password:
    <input  id="password" class="text-input" type="password"  required pattern="^(?=.*[A-Za-z])(?=.*\d)[A-Za-z\d]{8,}$">
    </label>
      <p id="passwordErr" class="error"></p>

      <label for="confirmPassword"> Confirm Password:
    <input id="confirmPassword" class="text-input" type="password" required/>
    <p id="confirmPasswordErr" class="error"></p>
    </label>
    
    <p id="confirmErr" class="error"></p>
      <button>Submit</button>
  </form>

  {{#if error}} 
    <span style="color: red;">{{error}}</span>
  {{/if}}

</section>
<script src="index.js" type="text/javascript"></script>